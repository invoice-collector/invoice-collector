<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice-Collector - <%= __('i18n.views.manage.my-collectors') %></title>
    <link rel="stylesheet" href="/views/styles.css">
    <link rel="icon" href="/views/icons/favicon.ico" type="image/x-icon">
</head>
<body>
    <script src="/views/user/script.js"></script>

    <!-- CREDENTIALS CONTAINER -->

    <div id="credentials-container" class="container">
        <!-- TITLE -->
        <h1><%= __('i18n.views.manage.my-collectors') %></h1>
        <!-- CREDENTIALS LIST -->
        <div id="credentials-list"></div>
        <!-- BUTTON -->
        <button id="add-credential-button" class="button action-button"><%= __('i18n.views.manage.add-collectors') %></button>
    </div>

    <!-- COMPANIES CONTAINER -->

    <div id="companies-container" class="container" hidden>
        <!-- BUTTON -->
        <button id="return-to-credentials-button" class="button return-button"><%= __('i18n.views.manage.return') %></button>
        <!-- TITLE -->
        <h1><%= __('i18n.views.manage.add-collectors') %></h1>
        <!-- COMPANIES LIST -->
        <ul id="companies-list"></ul>
        <button class="button delete-button no-collector-button" onclick="showFeedback()"><%= __('i18n.views.manage.no-collector') %></button>
    </div>

    <!-- FORM CONTAINER -->
        
    <div id="form-container" class="container" hidden>
        <!-- BUTTON -->
        <button id="return-to-companies-button" class="button return-button"><%= __('i18n.views.manage.return') %></button>
        <!-- TITLE -->
        <h1><%= __('i18n.views.manage.add-collectors') %></h1>
        <!-- FORM -->
        <div id="add-credential-form-container">
            <div class="company-item">
                <img id="company-logo" src="" alt="Logo">
                <div>
                    <h3 id="company-name"></h3>
                    <p id="company-description"></p>
                </div>
            </div>
            <div class="container" id="add-credential-instructions">
                <strong><%= __('i18n.views.manage.instructions') %>:</strong>
                <p></p>
            </div>
            <form id="add-credential-form">
                <div id="add-credential-form-params"></div>
                <label><%= __('i18n.collectors.all.note') %></label>
                <input type="text" name="note" placeholder="<%= __('i18n.collectors.all.note.placeholder') %>">
                <button type="submit" class="button action-button"><%= __('i18n.views.manage.add-collectors') %></button>
            </form>
        </div>
    </div>

    <!-- FEEDBACK CONTAINER -->

    <div id="feedback-container" class="container" hidden>
        <!-- BUTTON -->
        <button class="button return-button" onclick="showCredentials()"><%= __('i18n.views.manage.return') %></button>
        <!-- TITLE -->
        <h1><%= __('i18n.views.manage.send-feedback') %></h1>
        <!-- FORM -->
        <form id="feedback-form">
            <label><%= __('i18n.views.manage.feedback') %><span style="color: red;"> *</span></label>
            <textarea type="text" name="feedback" placeholder="<%= __('i18n.views.manage.feedback.placeholder') %>" required></textarea>
            <label><%= __('i18n.collectors.all.email') %></label>
            <input type="text" name="email" type="email" placeholder="<%= __('i18n.views.manage.feedback.email.placeholder') %>">
            <button type="submit" class="button action-button"><%= __('i18n.views.manage.send-feedback') %></button>
        </form>
        <div id="feedback-response-success" class="feedback-response feedback-response-success" hidden>
            <p><%= __('i18n.views.manage.feedback.success') %></p>
        </div>
        <div id="feedback-response-error" class="feedback-response feedback-response-error" hidden>
            <p><%= __('i18n.views.manage.feedback.error') %></p>
        </div>
    </div>

    <!-- FOOTER -->

    <a id="send-feedback-button" class="button" onclick="showFeedback()"><%= __('i18n.views.manage.send-feedback') %></a>

    <!-- SCRIPT -->

    <script>
        const locale = "<%= locale %>";
    </script>
</body>
</html>
